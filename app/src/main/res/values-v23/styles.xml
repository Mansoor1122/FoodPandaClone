<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!--switch style-->



    <!--Time Pikcer Design -->
    <style name="TimePickerTheme" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>
    <!--Nav Drawer Text Style-->
    <style name="navstyle">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="EditTextTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">#999999</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlHighlight">#999999</item>
        <item name="android:fontFamily">@font/dosis_medium</item>
        <item name="colorControlActivated">@color/black</item>  </style>
    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">#999999</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlHighlight">#999999</item>

        <item name="colorControlActivated">@color/black</item>
    </style>

    <style name="AppTheme.TransparentTheme">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="colorPrimaryDark" tools:targetApi="23">@color/light_black</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
    </style>
</resources>
