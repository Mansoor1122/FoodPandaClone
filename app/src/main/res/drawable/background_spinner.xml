<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <stroke android:width="0.5dp"
                        android:color="@color/black_dim"></stroke>
                    <gradient android:angle="90" android:endColor="@color/lightgray" android:startColor="@color/lightgray" android:type="linear" />
                    <corners android:radius="1dp" />
                </shape>
            </item>
            <item android:right="5dp">
                <bitmap android:gravity="center_vertical|right" android:src="@android:drawable/arrow_down_float" />
            </item>
        </layer-list>
    </item>
</selector>